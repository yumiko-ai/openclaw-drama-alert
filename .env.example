# DramaAlert Studio Environment Variables
# Copy this file to .env.local and fill in the values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# App Secrets (generate strong random values)
APP_PASSWORD=your-secure-password-min-16-chars
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long

# API Keys (optional)
OPENCLAW_API_URL=http://100.88.15.95:3000
GEMINI_API_KEY=your-gemini-api-key

# ============================================
# Twitter Viral Monitor Configuration
# ============================================

# Twitter API Bearer Token (for direct API access)
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# Twitter List ID to monitor
TWITTER_LIST_ID=1667713130078642178

# Bird CLI Configuration (optional - for CLI-based monitoring)
BIRD_CONFIG_PATH=~/.config/bird/config.json

# DramaAlert URL (for pushing alerts)
DRAMAALERT_URL=https://openclaw-drama-alert.vercel.app

# Viral Detection Thresholds
VIRAL_IMPRESSION_THRESHOLD=70000
VELOCITY_SPIKE_THRESHOLD=1.5
